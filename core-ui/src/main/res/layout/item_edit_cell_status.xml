<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/btnRemoveStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_remove_viewer_sort"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.anytypeio.anytype.core_ui.widgets.text.StatusWidget
        android:id="@+id/tvStatusName"
        style="@style/StatusTextStyle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="32dp"
        tools:layout_marginStart="36dp"
        tools:text="In progress" />

    <ImageView
        android:id="@+id/btnDragAndDropStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/ic_dnd"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/statusSelectionIndex"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        tools:text="1"
        tools:visibility="visible"
        style="@style/SelectedRelationCircleBadgeStyle" />

</FrameLayout>