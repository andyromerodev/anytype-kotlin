<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:minHeight="@dimen/todoToolbarHeaderMinHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_cover_height_todo"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_document_cover"
            android:scaleType="fitXY"
            tools:visibility="visible"
            tools:background="@color/orange"
            android:visibility="gone" />

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/documentIconContainer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rectangle_default_page_logo_background"
            android:transitionName="@string/logo_transition">

            <ImageView
                android:id="@+id/emojiIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/space_between_header_container_and_title"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/todoTitleCheckbox"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="top"
            android:layout_marginTop="1dp"
            android:background="@drawable/ic_todo_title_checkbox_selector" />

        <com.anytypeio.anytype.core_ui.widgets.text.TextInputWidget
            android:id="@+id/title"
            style="@style/BlockTitleContentStyle"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:hint="@string/untitled"
            android:textColorHint="@color/editor_default_hint_text_color"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:paddingTop="0dp"
            app:ignoreDragAndDrop="true"
            app:onlyPasteAsPlaneText="true"
            tools:text="Check new Android version" />
    </LinearLayout>

</LinearLayout>