<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/btnCardSmall"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:background="@drawable/default_ripple"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_marginStart="20dp"
        android:id="@+id/tvCoverType"
        tools:text="Cover"
        style="@style/ViewerSettingOptionTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:layout_marginEnd="20dp"
        android:id="@+id/ivCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/ic_option_checked_black"
        android:visibility="invisible" />

</FrameLayout>